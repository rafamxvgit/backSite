generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  name String
  userName String
  senha String
  avaliacoes Avaliacao[]
}

model Avaliacao {
  id Int @default(autoincrement()) @id
  UserId Int
  content String
  user User @relation(fields: [UserId], references: [id])
}